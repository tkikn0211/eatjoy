<div class="container">
  <div class="row mt-3">
　　<div class="col-md-3">
　　  <h4>募集投稿一覧</h4>
　　</div>
  </div>
  <div class="row justify-content-end">
    <div class="col-md-2">
      <%= link_to "新規投稿", new_recruitment_path, class: "btn btn-success" %>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-12 mx-auto">
      <table class="table">
        <thead class="bg-light text-center">
          <th class="col-2">ユーザー画像</th>
          <th class="col-2">アカウント名</th>
          <th class="col-2">店舗画像</th>
          <th class="col-2">タイトル</th>
          <th class="col-2">店舗名</th>
          <th></th>
        </thead>
        <tbody class="text-center">
          <% @recruitment.each do |recruitment| %>
            <tr>
              <td><%= attachment_image_tag @user, :user_image, size:'150x80' %></td>
              <td>
                <%= link_to recruitment.user.account_name, profile_path(@user.id) %>
              </td>
              <td><%= attachment_image_tag recruitment, :store_image, size:'150x80' %></td>
              <td><%= recruitment.title %></td>
              <td><%= recruitment.store_name %></td>
              <td><%= link_to "詳細", recruitment_path(recruitment.id), class: "btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>
