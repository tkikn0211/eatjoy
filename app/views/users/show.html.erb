<div class='container'>
  <div class='row mt-3'>
    <div class='col-md-3 m-4 text-center'>
      <h4>マイページ</h4>
    </div>
  </div>

  <!--会員情報-->
  <div class="row mt-4">
    <div class="col-md-4">
      <%= attachment_image_tag @user, :user_image, size:'250x200' %>
    </div>
    <div class="col-md-7">
      <table class="table">
        <tr>
          <td>名前</td>
          <td><%= @user.last_name %><%= @user.first_name %></td>
        </tr>

        <tr>
          <td>フリガナ</td>
          <td><%= @user.last_name_kana %><%= @user.first_name_kana %></td>
        </tr>

        <tr>
          <td>アカウント名</td>
          <td><%= @user.account_name %></td>
        </tr>

        <tr>
          <td>住所</td>
          <td><%= @user.address %></td>
        </tr>

        <tr>
         <td>メールアドレス</td>
         <td><%= @user.email %></td>
        </tr>

        <tr>
          <td>趣味</td>
          <td><%= @user.hobby %></td>
        </tr>

        <tr>
          <td>自己紹介</td>
          <td><%= @user.body %></td>
        </tr>

      </table>
      <div class="row">
        <div class="col-9"></div>
         <div class="col-3">
          <!--ログインユーザーのみ-->
          <% if @user == current_user %>
            <%= link_to"編集する",edit_user_path,class: "btn btn-success" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>