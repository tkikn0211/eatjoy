<div class="container">
  <div class="row mt-3">
    <div class="col-md-3 m-4 text-center">
      <h4>プロフィール</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-9"></div>
      <div class="col-3">
        <% if current_user != @user %>
          <%= link_to 'メッセージを送る', message_path(@user.id), class:"btn  btn-success chat-btn" %>
        <% end %>
      </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-4">
      <%= attachment_image_tag @user, :user_image, size:'250x200', fallback: "no_image.jpg" %>
    </div>
    <div class="col-md-8">
      <table class="table">
        <tr>
          <td>名前</td>
          <td><%= @user.account_name %></td>
        </tr>

        <tr>
          <td>住所</td>
          <td><%= @user.address %></td>
        </tr>

        <tr>
          <td>趣味</td>
          <td><%= @user.hobby %></td>
        </tr>

        <tr>
          <td width="20%">自己紹介</td>
          <td><%= @user.body %></td>
        </tr>
      </table>

    </div>
  </div>
</div>