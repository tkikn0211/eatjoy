<div class='container'>
  <div class='row mt-3'>
    <div class='col-md-3 m-4 text-center'>
      <h4><%= @user.account_name %></h4>
    </div>
  </div>

  <div class="row">
    <div class="col-9"></div>
      <div class="col-3">
        <% if current_user != @user %>
          <%= link_to 'メッセージを送る', message_path(@user.id), class:"btn  btn-success chat-btn" %>
        <% end %>
      </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-4">
      <%= attachment_image_tag @user, :user_image, size:'250x200', fallback: "no_image.jpg" %>
    </div>
    <div class="col-md-7">
      <table class="table">
        <tr>
          <td>名前</td>
          <td><%= @user.last_name %><%= @user.first_name %></td>
        </tr>

        <tr>
          <td>フリガナ</td>
          <td><%= @user.last_name_kana %><%= @user.first_name_kana %></td>
        </tr>

        <tr>
          <td>住所</td>
          <td><%= @user.address %></td>
        </tr>

        <tr>
          <td>趣味</td>
          <td><%= @user.hobby %></td>
        </tr>

        <tr>
          <td>自己紹介</td>
          <td><%= @user.body %></td>
        </tr>
      </table>

    </div>
  </div>
</div>