<div class="search_form">
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.text_field :word %>
    <%= f.select :range, options_for_select({ "投稿" => "recruitment"}) %>
    <%= f.select :search, options_for_select({ "部分一致" => "partial" }) %>
    <%= f.submit '検索' %>
  <% end %>
</div>